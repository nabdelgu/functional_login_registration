<link rel="stylesheet" href="/css/Home.css">

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body registration-form">
      <center>
        <img class="register-icon" src="../images/browser.png" alt="Register-Avatar">
      </center>
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register</h1>
        <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <input type="checkbox" id="checkBox1">I certify I am NOT a Southeastern Louisiana University student nor a Southeastern Dual Enrollment Student.<br>
        <input type="checkbox" id="checkBox2">I certify I have read and agree to the terms and conditions<br>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
